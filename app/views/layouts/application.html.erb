<header class="app-header">
  <!-- 上段：アプリ情報 -->
  <div class="header-top">
    <div class="status-icons">
      <!-- 燃やせる竹（仮アイコン10個） -->
      <div class="bamboo-icons">
        <% 10.times do %>
          <span class="icon">🎋</span>
        <% end %>
      </div>

      <!-- 焚き火レベル（仮アイコン10個） -->
      <div class="fire-level-icons">
        <% 10.times do %>
          <span class="icon">🔥</span>
        <% end %>
      </div>

      <!-- 累計日数（仮） -->
      <div class="total-days">
        <span>累計日数: 123日</span>
      </div>
    </div>

    <!-- 設定アイコン -->
    <div class="settings-icon">
      <span>⚙️</span>
    </div>
  </div>

  <!-- 下段：リンク -->
  <div class="header-bottom">
    <nav class="header-links">
      <%= link_to "利用規約", "#" %>
      <%= link_to "プライバシーポリシー", "#" %>
      <%= link_to "お問合せ", "#" %>
    </nav>
  </div>
</header>
